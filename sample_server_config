server {
    root /usr/src/projects/bigbear;
    listen 80;
    handler static {
        location /static;
        root static_files/some_files;
    }
    handler static {
        location /fun;
        root static_files/more_files;
    }
    handler static{
        location /memes;
        root static_files/memes/images;
    }
    handler static{
        location /meme/submit;
        root static_files/memes;
    }
    handler echo {
        location /echo;
    }
    handler status {
        location /status;
    }
    handler error {
        location /;
    }

    handler proxy {
        location /rubberducks;
        dest www.rubberducks.cs130.org/status;
    }

    handler proxy {
        location /ucla;
        dest www.ucla.edu;
    }

    handler proxy {
        location /moved_echo;
        dest 35.247.29.163/redirect;
    }

    handler redirect {
        location /redirect;
        dest www.rubberducks.cs130.org/static/index.html;
    }

    handler createMeme {
        location /meme/create;
    }

    handler listMeme {
        location /meme;
    }

    handler viewMeme {
        location /meme/view;
        root static_files/memes/images;
        memeURI /memes;
    }

    handler health {
        location /health;
    }

    handler malformed {
        location /malformed;
    }

}
